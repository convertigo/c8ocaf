{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "files" :[
    "src/index.ts",
    "src/caf/convertigo.base.ts",
    "src/caf/convertigo.page.ts",
    "src/caf/convertigo.router.ts",
    "src/caf/convertigo.routingtable.ts",
    "src/caf/convertigo.utils.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "bundles"
  ]
}